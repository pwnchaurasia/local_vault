{
  "manifest_version": 3,
  "name": "LocalVault",
  "version": "1.0.0",
  "description": "Secure local file sharing between your devices",
  "permissions": [
    "storage",
    "activeTab",
    "downloads",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "http://192.168.*:*/*",
    "http://10.*:*/*",
    "http://172.*:*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LocalVault",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}